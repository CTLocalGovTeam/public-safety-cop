<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009"
				xmlns:s="library://ns.adobe.com/flex/spark"
				xmlns:mx="library://ns.adobe.com/flex/mx"
				>


	<fx:Script>
		<![CDATA[

		]]>
	</fx:Script>
	<s:BorderContainer width="100%" height="80" backgroundColor="#708090" >

	<mx:VBox width="100%" height="80" verticalGap="1" paddingTop="10" >
              <mx:HBox width="100%" height="100%" paddingLeft="5">
				  <mx:Image id="FlickerImage" source="{data.image}" width="50" height="50" />
		        <mx:Label id="fltitle" text="{data.title}" toolTip="{fltitle.text}" textDecoration="underline" minWidth="200" width="100%" fontWeight="bold" selectable="false"  buttonMode="true" useHandCursor="true" mouseChildren="false" />
			  </mx:HBox>
		  <s:Spacer height="1" />
			<mx:HBox paddingLeft="5" >
				<s:Label text="PublishDate:{data.date}" fontStyle="normal" fontWeight="bold" fontSize="10" />
			</mx:HBox>
	</mx:VBox>

	</s:BorderContainer>
</mx:VBox>
