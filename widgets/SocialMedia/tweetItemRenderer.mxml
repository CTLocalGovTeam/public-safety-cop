<mx:VBox xmlns:fx="http://ns.adobe.com/mxml/2009"
		 xmlns:s="library://ns.adobe.com/flex/spark"
		 xmlns:mx="library://ns.adobe.com/flex/mx"

		 >
	<fx:Script>
		<![CDATA[

		]]>
	</fx:Script>
	<s:BorderContainer width="100%" height="80" backgroundColor="#708090">
		<mx:VBox width="100%" height="90" verticalGap="3" paddingTop="10" verticalScrollPolicy="off" >
			<mx:HBox paddingLeft="5" width="100%">
				<mx:Image id="TweetImage" source="{data.photo}" width="50" height="50" />
				<mx:VBox verticalGap="2" width="100%" >
					<mx:Label id="titlelbl" text="{data.title}" toolTip="{titlelbl.text}" textDecoration="underline" minWidth="200" width="100%"  selectable="false"  buttonMode="true" useHandCursor="true" mouseChildren="false" />

					

				</mx:VBox>
			</mx:HBox>

			<mx:HBox paddingLeft="5"  paddingTop="5"  >
				<s:Label text="PublishDate:{data.date}" fontSize="10" fontWeight="bold" fontStyle="normal"  />
			</mx:HBox>

		</mx:VBox>

	</s:BorderContainer>

</mx:VBox>
