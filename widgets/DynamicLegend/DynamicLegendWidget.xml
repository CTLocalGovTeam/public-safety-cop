<configuration>
	<!-- <selectionLayout > : tag  specifies the alpha and color of selected legend.   -->
	<selectionLayout>
		<alpha number="0.5"/>
		<color code="0xDDFF00"/>
	</selectionLayout>
	<!-- <optionLayout> : tag specifies Tab tooltip. -->
	<optionLayout>
		<legendTab label="Legend List"/>
		<optionTab label="Select Layer"/>
		<clearSelectionTab label="Clear" />
	</optionLayout>

	<!-- <alerts>:  tag specifies alert messages. -->
	<alerts>
		<noResultFound alertheader="Alert"
			alertmessage="Please change map extent to view legend for "/>
		<faultError alertheader="Alert"
			alertmessage="Unable to perform query for a layer"/>
	</alerts>

	<!-- <titlebarimagepath>: Title bar image path -->
	<titlebarimagepath>
		<optionimagepath>widgets/DynamicLegend/assets/images/iOption20x20.png</optionimagepath>
		<legendimagepath>widgets/DynamicLegend/assets/images/Legend32.png</legendimagepath>
		<clearSelectionPath>widgets/DynamicLegend/assets/images/edit-clear.png</clearSelectionPath>
	</titlebarimagepath>

	<!--  <outFieldCount>: This tag specifies the maximum number of field present in result datagrid.-->
	<outFieldCount>15</outFieldCount>
</configuration>