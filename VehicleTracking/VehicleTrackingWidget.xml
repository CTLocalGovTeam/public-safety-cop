<configuration>
    <!-- Observations from tracking server -->
    <trackingServerUrl>sampletrackingserver1.arcgis.com</trackingServerUrl>
	<trackingServerPort>4503</trackingServerPort>
    <trackingUser></trackingUser>
    <trackingPass></trackingPass>
	<trackingServiceName>NapervilleSnowPlows</trackingServiceName>
    <connectAttemptsPerButtonClick>3</connectAttemptsPerButtonClick>
    <secondsBetweenReconnectRetries>20</secondsBetweenReconnectRetries>
    <maxObservationsPerVehicle>0</maxObservationsPerVehicle>
    <observationIndexField>VEHICLE_LABEL</observationIndexField>

    <!-- How closely we zoom to observation (in map units) -->
    <zoomToEquipmentBuffer>1000</zoomToEquipmentBuffer>

    <!-- Observation symbology -->
    <latestObservationLabelingField>VEHICLE_LABEL</latestObservationLabelingField>
	<latestObservationSymbol>direction.png</latestObservationSymbol>
	<latestObservationSymbolHeadingField></latestObservationSymbolHeadingField>
    <nextOldestObservationDefaultColor>0x0000ff</nextOldestObservationDefaultColor>
    <nextOldestObservationDefaultSize>6</nextOldestObservationDefaultSize>
    <nextOldestObservationDefaultAlpha>1</nextOldestObservationDefaultAlpha>
    <oldestObservationDefaultColor>0xffff00</oldestObservationDefaultColor>
    <oldestObservationDefaultSize>0</oldestObservationDefaultSize>
    <oldestObservationDefaultAlpha>0</oldestObservationDefaultAlpha>
    <observationWindowInMinutes>30</observationWindowInMinutes>

    <!-- Equipment list -->
    <equipmentListUrl>http://localgovtemplates2.esri.com/ArcGIS/rest/services/Infrastructure/Problems/MapServer/3/query?where=1%3D1&outFields=DEVICEID%2CUSERNAME%2CEMPLOYEEID%2CDEPARTMENT%2CDIVISION%2CPHONE%2CEMAIL%2CSMSTXT%2CDESCRIPT%2CDISTRICTID%2CUNITID%2CEQUIPID%2CEQUIPTYPE&f=json</equipmentListUrl>
    <secondsBetweenEquipmentListRefreshes>60</secondsBetweenEquipmentListRefreshes>
    <equipmentListIndexField>DEVICEID</equipmentListIndexField>

    <!-- Equipment popup; can use fields from observation or equipment list -->
    <equipmentPopup width="240" height="120">
        <format><![CDATA[Vehicle: {DEVICEID}<br>Organization: {DEPARTMENT}<br>Driver: {USERNAME}<br>Phone: {PHONE}<br>Assignment: {EQUIPTYPE}<br>                in district {DISTRICTID}<br>{LOCATION_TIME}]]></format>
    </equipmentPopup>
</configuration>
