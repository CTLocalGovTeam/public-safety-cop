<?xml version="1.0" ?>
<configuration>
     
     <!-- Title tag specify the title to be display on a to of the widget-->
     <title>Select Event Type to view corresponding layers</title>
    <layers>
    <!-- The 'layergrpup'specify the event group display details
    	@label specify name of group
    	@state specify state of check box  state .If state is checked than node and associated  leafs will be by default checked.
    	@id    specify the indexing of group.
    	
    	The layer specify the event specific layer details.
    	@label specify name of layer
    	@state specify check box  state .If state is checked than node and associated  leafs will be by default checked else it will be unchecked.
    	@id    specify the id for each layer.if id field will be blank when allIds is true else always specify id value to refer each layer.
    	@type  specify the type of layer. Allowed type is dynamic and feature .
    	@allIds If true than all layers should be taken  from map server and false than specify the id field value.
    	@url  specify the url of layer.
     -->
     
    <layergrpup id="1" label="Fire" state='unchecked'>
    		 <layer  label="WildFire"  		state='unchecked' id='5'	 type='feature' allIds='false'   url='http://rmgsc.cr.usgs.gov/ArcGIS/rest/services/nhss_haz/MapServer/5'  />
             <layer  label="Wildfire Perimeters" state='unchecked'  id='6' type='feature' allIds='false' url='http://rmgsc.cr.usgs.gov/ArcGIS/rest/services/nhss_haz/MapServer/6'  />
    	</layergrpup>
    	
    	<layergrpup id="2" label="Flood" state='unchecked'>
    		  <layer  label="Floods "  type='feature' id='0' state='unchecked' allIds='false' url='http://rmgsc.cr.usgs.gov/ArcGIS/rest/services/nhss_haz/MapServer/0' />
              <layer  label="nhss_weat" type='dynamic' id='' state='unchecked' allIds='true' url='http://rmgsc.cr.usgs.gov/ArcGIS/rest/services/nhss_weat/MapServer' />
     	</layergrpup>
    	
    	<layergrpup id="3" label="Earthquakes" state='unchecked'>
    		  <layer  label="Earthquakes"    type='feature' id='3' state='unchecked' allIds='false' url='http://rmgsc.cr.usgs.gov/ArcGIS/rest/services/nhss_haz/MapServer/3' />
              <layer  label="nhss_shakemaps" type='feature' id='0' state='unchecked' allIds='false'  url='http://rmgsc.cr.usgs.gov/ArcGIS/rest/services/nhss_shakemaps/MapServer/0' />
    	</layergrpup>
        
    	<layergrpup id="4" label="Hurricane" state='unchecked'>
    	 <layer  label="Hurricane_Active"  type='dynamic' id='' state='unchecked' allIds='true'  url='http://tm2-elb-1378978824.us-east-1.elb.amazonaws.com/ArcGIS/rest/services/LiveFeeds/Hurricane_Active/MapServer' />
    	</layergrpup>
    	
    	<layergrpup id="5" label="SevereWeather" state='unchecked'>
    		 <layer  label="NOAA_storm_reports" type='dynamic' state='unchecked' id='' allIds='true'  url='http://tm2-elb-1378978824.us-east-1.elb.amazonaws.com/ArcGIS/rest/services/LiveFeeds/NOAA_storm_reports/MapServer' />
    	</layergrpup>
    	
     </layers>
    
</configuration>

