<configuration>
    <service>
        <!-- service that is time aware containing all the assets to playback, this will be used to populate the FeatureLayer -->
        <trackingLayerHistory>
            <url>http://stlouis.esri.com/ArcGIS/rest/services/Regional/Massachusetts_Boston_SnowPlow/MapServer/0</url>
            <proxyurl>
            </proxyurl>
            <useamf>false</useamf>
            <token>
            </token>
            <foreignKey>VEHICLE_LABEL</foreignKey>
            <!-- Query assumes this is a string field -->
            <defaultQuery>
            </defaultQuery>
            <trackOutFields>HEADING,VEHICLE_LABEL</trackOutFields>
            <trackIdField>VEHICLE_LABEL</trackIdField>
            <trackingSymbolDirectionAttribute>HEADING</trackingSymbolDirectionAttribute>
            <!--  -->
            <trackingLabelSymbolLabelAttribute>VEHICLE_LABEL</trackingLabelSymbolLabelAttribute>
            <!--  -->
        </trackingLayerHistory>
        <!-- service containing all the attributes of the assets that will be filtered, this will be used to populate the filtering table -->
        <trackingTableAssets>
            <url>http://stlouis.esri.com/ArcGIS/rest/services/Regional/Massachusetts_Boston_SnowPlow/MapServer/1</url>
            <proxyurl>
            </proxyurl>
            <useamf>false</useamf>
            <token>
            </token>
            <primaryKey>eqno</primaryKey>
            <!-- Query assumes this is a string field -->
            <defaultQuery>eqno &lt;&gt; ''</defaultQuery>
            <trackOutFields>district,agency,loc,eqno,eqtype</trackOutFields>
            <!-- These fields should be included below in the "view" section -->
        </trackingTableAssets>
    </service>
    <help>
        <previousColor>0x4C90F3</previousColor>
        <helpicon>i_help.png</helpicon>
        <helptext>Place help text for Playback widget here.</helptext>
    </help>
    <view>
        <playback>
            <!-- "MM/DD/YYYY HH:MM:SS TZD" -->
            <defaultStartDateTime>01/25/2011 10:00:0 GMT-0600</defaultStartDateTime>
            <defaultEndDateTime>01/25/2011 14:00:0 GMT-0600</defaultEndDateTime>
            <tableSelectedColor>0xF3D831</tableSelectedColor>
            <!-- probably same as graphicSelectedColor -->
            <tableSelectedTextColor>0x000000</tableSelectedTextColor>
            <!-- make sure opposite contrast of tableSelectedColor, otherwise you won't see the text -->
            <tableRollOverColor>0xFFFFFF</tableRollOverColor>
            <tableRollOverTextColor>0x000000</tableRollOverTextColor>
            <tableFields>
                <fields>
                    <!--
                    //==========================================================================
                    // field name must match exactly as it does in your ArcGIS Server Services Directory, also cAseMaTTeRs
                    // field alias can be specified if you want to use your own alias, otherwise the field alias from your service will be used
                    // formatType can only be formatTypeCurrency, formatTypeNumber, or formatTypeDate
                    // formating for dates must follow the following documented stringFormat
                    // http://help.adobe.com/en_US/FlashPlatform/reference/actionscript/3/mx/formatters/DateFormatter.html#formatString
                    // common examples are MM/DD/YYYY, MMM/DD/YYYY, MMMM/DD/YYYY, YYYY/MM/DD, MMMM-DD-YYYY
                    //========================================================================== -->
                    <field name="CHECKBOX"
                           alias=""
                           formatType="formatTypeCheckbox"/>
                    <!-- leave this UPPERCASE: this is just for display, does not belong in the ArcGIS service; will not be in trackOutFields -->
                    <field name="eqno" alias="Vehicle ID"/>
                    <field name="loc" alias="Snow Map"/>
                    <field name="district" alias="Snow District"/>
                    <field name="agency" alias="Agency"/>
                    <!-- field name="eqtype" alias="Type"/-->
                </fields>
            </tableFields>
        </playback>
        <symbol>
            <!-- LATEST OBSERVATION DECLARATIONS -->
            <trackingLabelSymbolLabelTextColor>0x000000</trackingLabelSymbolLabelTextColor>
            <!--  -->
            <trackingLabelSymbolLabelTextBackgroundColor>0xF3D831</trackingLabelSymbolLabelTextBackgroundColor>
            <!--  -->
            <trackingLabelSymbolLabelTextBackgroundBorderColor>0x797062</trackingLabelSymbolLabelTextBackgroundBorderColor>
            <!--  -->
            <!-- OBSERVATION AGER DECLARATIONS -->
            <trackingTimeRampSymbolAgerFromAlpha>0.5</trackingTimeRampSymbolAgerFromAlpha>
            <trackingTimeRampSymbolAgerToAlpha>0.8</trackingTimeRampSymbolAgerToAlpha>
            <trackingTimeRampSymbolAgerFromColor>0xFFC900</trackingTimeRampSymbolAgerFromColor>
            <trackingTimeRampSymbolAgerToColor>0xFFC900</trackingTimeRampSymbolAgerToColor>
            <!-- OBSERVATION RENDERER DECLARATIONS -->
            <trackingObservationSMSColor>0xFFC900</trackingObservationSMSColor>
            <trackingObservationSMSAlpha>1.0</trackingObservationSMSAlpha>
            <trackingObservationSMSSize>13</trackingObservationSMSSize>
            <trackingObservationSMSStyle>circle</trackingObservationSMSStyle>
            <trackingObservationSMSOutlineColor>0x765516</trackingObservationSMSOutlineColor>
            <trackingObservationSMSOutlineWidth>1.2</trackingObservationSMSOutlineWidth>
        </symbol>
    </view>
</configuration>
