<configuration>
	<map>
		<!-- extent,freehand_polygon,polygon -->
		<mapselectiontool>freehand_polygon</mapselectiontool>
		<zoomscale>10000</zoomscale>
	</map>
	<service>
		<url>http://stlouis.esri.com/ArcGIS/rest/services/LocalGovernmentTemplates/AssessmentOperationsv10/MapServer/0</url>
		<proxyurl></proxyurl>
		<useamf>false</useamf>
		<token></token>
	</service>
	<fields>
		<!-- //==========================================================================
		// field name must match exactly as it does in your ArcGIS Server Services Directory, also cAseMaTTeRs
		// field alias can be specified if you want to use your own alias, otherwise the field alias from your service will be used
		// formatType can only be formatTypeCurrency, formatTypeNumber, or formatTypeDate
		// formating for dates must follow the following documented stringFormat
		// http://help.adobe.com/en_US/FlashPlatform/reference/actionscript/3/mx/formatters/DateFormatter.html#formatString
		// common examples are MM/DD/YYYY, MMM/DD/YYYY, MMMM/DD/YYYY, YYYY/MM/DD, MMMM-DD-YYYY
		//========================================================================== -->
		<exportfields>
			<field name="PARCELID" alias="Parcel No."/>
			<field name="SITEADDRESS" alias="Address"/>
			<field name="TRANSDT" alias="Transaction Date" formatType="formatTypeDate" format="MM/DD/YYYY" useUTC="false"/>
			<field name="GRANTOR"/>
			<field name="GRANTEE"/>
			<field name="SALEAMNT" alias="Sale Amt" formatType="formatTypeCurrency"/>
			<field name="CNTASSDVAL" formatType="formatTypeCurrency"/>
			<field name="SALESRATIO" formatType="formatTypePercentage" precision="5"/>
			<field name="RESSTRTYPE"/>
			<field name="RESYRBLT"/>
			<field name="RESFLRAREA" formatType="formatTypeNumber"/>
			<field name="NGHBRHDCD"/>
		</exportfields>
		<tablefields>
			<field name="CHECKBOX" alias="" formatType="formatTypeCheckbox"/>
			<field name="OBJECTID" alias="Sale No."/>
			<field name="PARCELID" alias="Parcel No."/>
			<field name="SALEAMNT" alias="Sale Amt" formatType="formatTypeCurrency"/>
			<field name="CNTASSDVAL" formatType="formatTypeCurrency"/>
			<field name="SALESRATIO" formatType="formatTypePercentage" precision="2"/>
		</tablefields>
		<chartfields>
			<field name="OBJECTID" alias="Sale No."/>
			<field name="TRANSDT" alias="Sale Date" formatType="formatTypeDate" format="MM/DD/YYYY" useUTC="false"/>
			<field name="SALEAMNT" alias="Sale Amt" formatType="formatTypeCurrency"/>
		</chartfields>
		<tooltipfields>
			<field name="OBJECTID" alias="Sale No."/>
			<field name="PARCELID" alias="Parcel No."/>
			<field name="SITEADDRESS" alias="Address"/>
			<field name="SALEAMNT" alias="Sale Amt" formatType="formatTypeCurrency"/>
			<field name="CNTASSDVAL" alias="Assessed Value" formatType="formatTypeCurrency"/>
			<field name="SALESRATIO" formatType="formatTypePercentage"/>
		</tooltipfields>
	</fields>
	<query>
		<defaultquery>1=1</defaultquery>
		<!-- Make sure you include all the fields here that are included in tablefields, tooltipfields, and exportfields -->
		<alloutfields>OBJECTID,PARCELID,SITEADDRESS,TRANSDT,GRANTOR,GRANTEE,SALEAMNT,CNTASSDVAL,SALESRATIO,RESSTRTYPE,RESYRBLT,RESFLRAREA,NGHBRHDCD</alloutfields>
		<comboboxoutfields>RESSTRTYPE,NGHBRHDCD</comboboxoutfields>
		<saleamountfieldname>SALEAMNT</saleamountfieldname>
		<saledatefieldname>TRANSDT</saledatefieldname>
		<assessedvaluefieldname>CNTASSDVAL</assessedvaluefieldname>
		<structuretypefieldname>RESSTRTYPE</structuretypefieldname>
		<yearbuiltfieldname>RESYRBLT</yearbuiltfieldname>
		<floorareafieldname>RESFLRAREA</floorareafieldname>
		<neighborhoodfieldname>NGHBRHDCD</neighborhoodfieldname>
	</query>
	<results>
		<!-- must be fileName.xls or fileName.csv -->
		<exportfilename>SalesAnalysisResults.csv</exportfilename>
		<datefieldformat>MM/DD/YY</datefieldformat>
		<sortfield>SALESRATIO</sortfield>
	</results>
	<chart>
		<plotSeriesXFieldName>CNTASSDVAL</plotSeriesXFieldName>
		<plotSeriesYFieldName>SALESRATIO</plotSeriesYFieldName>
		<axisFontColor>0xFFFFFF</axisFontColor>
		<axisStrokeColor>0xBBCCDD</axisStrokeColor>
		<axisFontSize>12</axisFontSize>
		<gridStrokeColor>0xEEEEEE</gridStrokeColor>
		<medianLineColor>0x5197EC</medianLineColor>
		<medianLineThickness>6</medianLineThickness>
		<aboveMedianColor>0x5FA351</aboveMedianColor>
		<belowMedianColor>0xBF3F0A</belowMedianColor>
		<yAxisTitle>Sales Ratio</yAxisTitle>
		<yAxisShapeLabel>Sales Ratio: </yAxisShapeLabel>
		<xAxisTitle>Assessed Value</xAxisTitle>
		<xAxisShapeLabel>Assessed Value: </xAxisShapeLabel>
	</chart>
	<help>
		<helpicon>i_help.png</helpicon>
		<helptext>Click on the symbols to learn about Sales in your area. If you would like to learn about foreclosures, assessment appeals and neighborhood value, click the more button to add additional information to the map.</helptext>
	</help>
	<view>
		<buttons>
			<previousColor>0xBB1F16</previousColor>
			<nextColor>0x5197EC</nextColor>
			<goColor>0x22A420</goColor>
			<fontColor>0xFDF9F9</fontColor>
		</buttons>
		<search>
			<clearButtonLabel>Clear</clearButtonLabel>
			<clearButtonToolTip>Clear Search Criteria</clearButtonToolTip>
			<mapToggleOnLabel>Map Selection(Turn On)</mapToggleOnLabel>
			<mapToggleOnToolTip>Click to Enable Map Selection</mapToggleOnToolTip>
			<mapToggleOffLabel>Map Selection(Turn Off)</mapToggleOffLabel>
			<mapToggleOffToolTip>Click to Disable Map Selection</mapToggleOffToolTip>
			<searchButtonLabel>Search</searchButtonLabel>
			<searchButtonToolTip>Click to Search-</searchButtonToolTip>
			<!-- validation -->
			<currencyMinValue>0</currencyMinValue>
			<currencyMaxValue>20000000</currencyMaxValue>
			<yearMinValue>2004</yearMinValue>
			<yearMaxValue>2009</yearMaxValue>
			<areaMinValue>900</areaMinValue>
			<areaMaxValue>12000</areaMaxValue>
		</search>
		<results>
			<tableSelectedColor>0xFFFFFF</tableSelectedColor><!-- probably same as graphicSelectedColor -->
			<tableSelectedTextColor>0x333333</tableSelectedTextColor><!-- make sure opposite contrast of tableSelectedColor, otherwise you won't see the text'-->
			<tableRollOverColor>0xFFD700</tableRollOverColor>
			<tableRollOverTextColor>0x333333</tableRollOverTextColor>
			<backButtonLabel>Search Again</backButtonLabel>
			<backButtonToolTip>Refine Search Criteria</backButtonToolTip>
			<chartButtonLabel>Sales Comparison</chartButtonLabel>
			<chartButtonToolTip>See a Sales Comparison Chart</chartButtonToolTip>
			<exportButtonLabel>Export</exportButtonLabel>
			<exportButtonToolTip>Download / Export your results as CSV</exportButtonToolTip>
		</results>
		<map>
			<graphicSelectedColor>0xFFFFFF</graphicSelectedColor>
			<graphicSelectedBorderColor>0x333333</graphicSelectedBorderColor>
			<graphicResultColor>0xFFD700</graphicResultColor>
			<graphicResultBorderColor>0x333333</graphicResultBorderColor>
		</map>
	</view>
</configuration>