<viewer:BaseWidget xmlns:fx="http://ns.adobe.com/mxml/2009"
                   xmlns:s="library://ns.adobe.com/flex/spark"
                   xmlns:mx="library://ns.adobe.com/flex/mx"
                   xmlns:viewer="com.esri.viewer.*"
                   xmlns:view="widgets.SalesAnalysis.view.*"
                   x="600" y="300"
                   preinitialize="preinitializeHandler(event)"
                   widgetConfigLoaded="widgetConfigLoadedHandler(event)">
    <fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		@namespace esri_stl "http://www.esri.com/2010/stl";
		mx|FormItem
		{
			labelStyleName: salesAnalysisFormItem;
		}
		.salesAnalysisFormItem
		{
			textAlign: left;
		}


	</fx:Style>
    <fx:Script>
        <![CDATA[
            import mx.events.FlexEvent;

            import widgets.SalesAnalysis.controller.AppController;

            private var _appController:Object;

            protected function preinitializeHandler(event:FlexEvent):void
            {
                _appController = new AppController();
            }

            protected function widgetConfigLoadedHandler(event:Event):void
            {
                if (configXML)
                {
                    _appController.initConfig(map, configXML);
                }
            }
        ]]>
    </fx:Script>
    <!-- MAIN WIDGET COMPONENT -->
    <viewer:WidgetTemplate id="wTemplate"
                           width="420" height="455"
                           closed="_appController.closed(event)"
                           minimized="_appController.minimized(event)"
                           open="_appController.open(event)">
        <view:MainView id="mainView"
                       width="100%" height="100%"/>
    </viewer:WidgetTemplate>

</viewer:BaseWidget>
