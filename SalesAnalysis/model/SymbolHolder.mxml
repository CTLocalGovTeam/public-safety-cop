<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx"
		 xmlns:esri="http://www.esri.com/2008/ags"
		>
	<fx:Script>
		<![CDATA[
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			private var topLevelStyleManager:IStyleManager2 = FlexGlobals.topLevelApplication.styleManager;
			[Bindable]
			private var cssStyleDeclarationGlobal:CSSStyleDeclaration = topLevelStyleManager.getStyleDeclaration("global");
			
			
		]]>
	</fx:Script>
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
		<esri:CompositeSymbol id="selectedItemCompositeSymbol">
			<esri:symbols>
				<s:ArrayCollection>
					<esri:SimpleMarkerSymbol size="30" style="circle" alpha="0">
						<esri:outline>
							<esri:SimpleLineSymbol width="6" color="{cssStyleDeclarationGlobal.getStyle('graphicSelectedBorderColor')}" />
						</esri:outline>
					</esri:SimpleMarkerSymbol>
					<esri:SimpleMarkerSymbol size="30" style="circle" alpha="0">
						<esri:outline>
							<esri:SimpleLineSymbol width="4" color="{cssStyleDeclarationGlobal.getStyle('graphicSelectedColor')}" />
						</esri:outline>
					</esri:SimpleMarkerSymbol>
				</s:ArrayCollection>
			</esri:symbols>
		</esri:CompositeSymbol>
		<esri:CompositeSymbol id="salesResultCompositeSymbol">
			<esri:symbols>
				<s:ArrayCollection>
					<esri:SimpleMarkerSymbol size="30" style="circle" alpha="0">
						<esri:outline>
							<esri:SimpleLineSymbol width="6" color="{cssStyleDeclarationGlobal.getStyle('graphicResultBorderColor')}" />
						</esri:outline>
					</esri:SimpleMarkerSymbol>
					<esri:SimpleMarkerSymbol size="30" style="circle" alpha="0">
						<esri:outline>
							<esri:SimpleLineSymbol width="4" color="{cssStyleDeclarationGlobal.getStyle('graphicResultColor')}" />
						</esri:outline>
					</esri:SimpleMarkerSymbol>
				</s:ArrayCollection>
			</esri:symbols>
		</esri:CompositeSymbol>
		
		
		
		<!-- Symbol for all point shapes -->
		<esri:SimpleMarkerSymbol id="sms" color="{cssStyleDeclarationGlobal.getStyle('chromeColor')}" size="12" style="square"/>
		<!-- Symbol for all line shapes -->
		<esri:SimpleLineSymbol id="sls" width="3" color="{cssStyleDeclarationGlobal.getStyle('chromeColor')}"/>
		<!-- Symbol for all polygon shapes -->
		<esri:SimpleFillSymbol id="sfs" alpha="0.7" color="{cssStyleDeclarationGlobal.getStyle('chromeColor')}" style="{SimpleFillSymbol.STYLE_SOLID}">
			<esri:outline>
				<esri:SimpleLineSymbol width="2" color="{cssStyleDeclarationGlobal.getStyle('color')}"/>
			</esri:outline>
		</esri:SimpleFillSymbol>
	</fx:Declarations>
</s:Group>
